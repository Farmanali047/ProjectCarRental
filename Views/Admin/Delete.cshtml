@model ProjectCarRental.Models.CarRegisteration

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .container {
        margin: 50px auto;
        padding: 20px;
        max-width: 600px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    h1, h3 {
        text-align: center;
    }
</style>

<div class="container">
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Car Registration</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CarName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CarName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CarColor)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CarColor)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CarModel)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CarModel)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.RegisterationNumber)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.RegisterationNumber)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Rental)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Rental)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ImgUrl)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ImgUrl)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Admin" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
