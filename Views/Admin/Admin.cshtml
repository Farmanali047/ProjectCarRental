@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Doctor Management - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/lib/bootstrap/bootstrap css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/my css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
/*             background-image: url("~/images/feedback-bg.jpg");
 */            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row ">
            <div class="col-12 col-sm-4 col-md-3 col-xl-2 h-auto py-border-4 bg-info"
                 >
                <div id="sidebar" class="bg-transparent d-flex flex-column flex-shrink-0 h-100">
                    <hr class="border border-dark border-3">
                    <div class="px-2 d-flex align-items-center mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                        <span class="fs-4 text-dark">Menu</span>
                    </div>
                    <hr class="border border-dark border-3">
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Admin", "Admin", null, new { @class = "nav-link link-body-emphasis text-dark active bi bi-arrow-right" })
                        </li>
                        <li>
                            @Html.ActionLink("Add Car", "CarRegisteration", "Admin", null, new { @class = "nav-link link-body-emphasis text-dark bi bi-arrow-right" })
                        </li>
                        <li>
                            @Html.ActionLink("View BookedCar", "Booked", "Home", null, new { @class = "nav-link link-body-emphasis text-dark bi bi-arrow-right" })
                        </li>
                        <li>
                            @Html.ActionLink("Delete Car", "DeleteCar", "Admin", null, new { @class = "nav-link link-body-emphasis text-dark bi bi-arrow-right" })
                        </li>
                        <li>
                            @Html.ActionLink("Update Car", "UpdateRental", "Admin", null, new { @class = "nav-link link-body-emphasis text-dark bi bi-arrow-right" })
                        </li>
                        <li>
                            @Html.ActionLink("View All Users", "ViewBookings", "Home", null, new { @class = "nav-link link-body-emphasis text-dark bi bi-arrow-right" })
                        </li>
                        <li>
                            @Html.ActionLink("View Available", "Available", "Home", null, new { @class = "nav-link link-body-emphasis text-dark bi bi-arrow-right" })
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-12 col-sm-8 col-md-9 col-xl-10 p-md-5">
                <div class="container py-5">
                    <div class="h3 fw-bolder bg-info fst-italic text-center px-2 px-sm-0 shadow py-4 mb-3"
                         style="font-family: Verdana, Geneva, Tahoma, sans-serif;">
                        Car
                        Rental - Admin Panel
                    </div>
                    <div class="h4 fw-bold my-4 w-75">
                        Welcome Admin!, <div style="color:rgb(116, 34, 136);">
                            Here you can
                        </div>
                    </div>
                    <div class="row row-cols-1 row-cols-lg-2 g-4">
                        <div class="col">
                            <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-primary text-white">
                                <i class="fa fa-plus-circle fs-1 mb-3"></i>
                                <h3>
                                    @Html.ActionLink("Add Car", "CarRegisteration", "Admin", null, new { @class = "nav-link link-body-emphasis text-white " })
                                </h3>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-success text-white">
                                <i class="fa fa-eye fs-1 mb-3"></i>
                                <h3>View Car</h3>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-warning text-white">
                                <i class="fa fa-edit fs-1 mb-3"></i>
                                <h3>
                                    @Html.ActionLink("Update Car", "UpdateRental", "Admin", null, new { @class = "nav-link link-body-emphasis text-white" })
                                </h3>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card p-3 p-lg-5 d-flex justify-content-center align-items-center text-center bg-danger text-white">
                                <i class="fa fa-trash fs-1 mb-3"></i>
                                <h3>
                                    @Html.ActionLink("Delete Car", "DeleteCar", "Admin", null, new { @class = "nav-link link-body-emphasis text-white" })
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script src="~/lib/bootstrap/bootstrap js/bootstrap.bundle.min.js"></script>
</body>

</html>