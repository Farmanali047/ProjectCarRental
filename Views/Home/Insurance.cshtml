@{
    ViewData["Title"] = "Insurance Page";
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 50px;
    }

    .insurance-card {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .insurance-title {
        font-weight: bold;
        color: #007bff;
        margin-bottom: 10px;
    }

    .insurance-description {
        margin-top: 10px;
    }

    .insurance-price {
        font-size: 20px;
        color: #28a745;
        font-weight: bold;
        margin-top: 10px;
    }

    .insurance-coverage {
        margin-top: 10px;
    }

    .insurance-features {
        margin-top: 10px;
        list-style-type: none;
        padding-left: 0;
    }

        .insurance-features li {
            margin-bottom: 5px;
        }

    .btn-buy {
        margin-top: 10px;
    }
</style>

    <div class="container">
        <div class="row">
            <div class="col-md-4 mt-4 pt-4">
                <div class="insurance-card">
                    <h2 class="insurance-title">Basic Coverage</h2>
                    <p class="insurance-description">Provides basic coverage for damages and liabilities.</p>
                    <p class="insurance-price">$20/day</p>
                    <p class="insurance-coverage">Coverage: $10,000</p>
                    <ul class="insurance-features">
                        <li>Collision Damage Waiver (CDW)</li>
                        <li>Third-Party Liability Coverage</li>
                        <li>24/7 Roadside Assistance</li>
                    </ul>
                    <button class="btn btn-primary btn-buy">Buy Now</button>
                </div>
            </div>
            <div class="col-md-4 mt-4 pt-4">
                <div class="insurance-card">
                    <h2 class="insurance-title">Standard Coverage</h2>
                    <p class="insurance-description">Offers enhanced coverage with higher limits.</p>
                    <p class="insurance-price">$30/day</p>
                    <p class="insurance-coverage">Coverage: $20,000</p>
                    <ul class="insurance-features">
                        <li>Collision Damage Waiver (CDW)</li>
                        <li>Third-Party Liability Coverage</li>
                        <li>Comprehensive Coverage</li>
                        <li>Personal Accident Insurance</li>
                        <li>24/7 Roadside Assistance</li>
                    </ul>
                    <button class="btn btn-primary btn-buy">Buy Now</button>
                </div>
            </div>
            <div class="col-md-4 mt-4 pt-4">
                <div class="insurance-card">
                    <h2 class="insurance-title">Premium Coverage</h2>
                    <p class="insurance-description">Comprehensive coverage with maximum protection.</p>
                    <p class="insurance-price">$40/day</p>
                    <p class="insurance-coverage">Coverage: $30,000</p>
                    <ul class="insurance-features">
                        <li>Collision Damage Waiver (CDW)</li>
                        <li>Third-Party Liability Coverage</li>
                        <li>Comprehensive Coverage</li>
                        <li>Personal Accident Insurance</li>
                        <li>Theft Protection</li>
                        <li>24/7 Roadside Assistance</li>
                    </ul>
                    <button class="btn btn-primary btn-buy">Buy Now</button>
                </div>
            </div>
        </div>
    </div>
