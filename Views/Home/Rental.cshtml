@{
    ViewData["Title"] = "Rental Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rental Services - Ali Car's Rental System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        

        .container {
            margin-top: 50px;
        }

        .service-card {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .service-icon {
            font-size: 36px;
            color: #007bff;
            margin-bottom: 10px;
        }

        .service-title {
            font-weight: bold;
            color: #007bff;
        }

        .service-description {
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="container  ">
        <div class="row">
            <div class="col-md-4 mt-4 ">
                <div class="service-card">

                    <h2 class="service-title">Wide Range of Cars</h2>
                    <p class="service-description">Choose from a variety of cars including sedans, SUVs, trucks, and more.</p>
                </div>
            </div>
            <div class="col-md-4  mt-4">
                <div class="service-card">

                    <h2 class="service-title">Competitive Prices</h2>
                    <p class="service-description">We offer competitive prices to suit your budget.</p>
                </div>
            </div>
            <div class="col-md-4  mt-4">
                <div class="service-card">

                    <h2 class="service-title">Flexible Rental Durations</h2>
                    <p class="service-description">Rent a car for as long as you need, whether it's for a day, a week, or longer.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 ">
                <div class="service-card">

                    <h2 class="service-title">24/7 Customer Support</h2>
                    <p class="service-description">Our customer support team is available around the clock to assist you with any queries.</p>
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="service-card">

                    <h2 class="service-title">Customization Options</h2>
                    <p class="service-description">Customize your rental with optional add-ons such as GPS, child seats, and more.</p>
                </div>
            </div> 
            <div class="col-md-4 ">
                <div class="service-card">

                    <h2 class="service-title">Insurance Options</h2>
                    <p class="service-description">Choose from a range of insurance options to ensure peace of mind during your rental.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
