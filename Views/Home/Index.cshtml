@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1 class="display-4 text-dark font-weight-bold" style="letter-spacing: -2.5px;">Welcome to DriveHub</h1>
    <p class="lead text-dark">Rent the car of your choice and explore the world!</p>
    <a class="btn text-light btn-lg" style="background-color:#2C7865" href="@Url.Action("TotalCars", "Home")" role="button">Explore Cars</a>
</div>

<marquee behavior="scroll" direction="right" scrollamount="10">Experience the convenience of renting top-quality cars for your travels!</marquee>

<div id="carouselExampleIndicators" class="carousel slide m-5 rounded-5 w-90" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active ">
            
            <img class="d-block w-100 rounded-5 shadow" src="~/images/audi.jpg" alt="First slide" style="height: 500px; width: 100px;object-fit:cover">
        </div>
        <div class="carousel-item ">
            <img class="d-block w-100" src="~/images/m3.jpeg" alt="Second slide" style="height: 500px; width: 100px; object-fit:cover">
        </div>
        <div class="carousel-item a">
            <img class="d-block w-100" src="~/images/m4.jpg" alt="Third slide" style="height: 500px; width: 100px; object-fit:cover">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

