@{
    Layout = null;
}
<style>
    body {
        background-color: #f0f0f0;
    }

    .registration-form {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 50px auto;
    }

    .registration-form {
        text-align: center;
        margin-bottom: 20px;
        background-color: rgb(0, 110, 255);
        background-attachment: fixed;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
        }

    .btn-register {
        width: 100%;
    }

    .custom-file-input {
        cursor: pointer;
    }

    .custom-file-label {
        overflow: hidden;
    }
</style>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<nav class="navbar navbar-expand-lg navbar-light bg-dark ">
    <a class="navbar-brand text-light" href="@Url.Action("Admin", "Admin")">Car Rental System</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">

                <a class="nav-link text-light" href="@Url.Action("Admin", "Admin")">Home</a>
            </li>
            <li class="nav-item">

                <a class="nav-link text-light" href="@Url.Action("CarRegisteration", "Admin")">Car Registration</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-light" href="@Url.Action("Removed", "Admin")">Removed Car</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="@Url.Action("Booked", "Admin")">Booking  Car's</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="@Url.Action("Available", "Admin")">Available Car's</a>
            </li>
        </ul>
    </div>
</nav>

<body>
    <div class="container mt-5 pt-5">
        <div class="registration-form">
            <h2>Car Removed</h2>
            <form>
                <div class="form-group">
                    <label for="driverName">Driver Name</label>
                    <input type="text" class="form-control" id="driverName" placeholder="Enter driver name" required>
                </div>
                <div class="form-group">
                    <label for="driverAge">Driver Age</label>
                    <input type="number" class="form-control" id="driverAge" placeholder="Enter driver age" required>
                </div>
                <div class="form-group">
                    <label for="carColor">Car Color</label>
                    <input type="text" class="form-control" id="carColor" placeholder="Enter car color" required>
                </div>
                <div class="form-group">
                    <label for="carModel">Car Model</label>
                    <input type="text" class="form-control" id="carModel" placeholder="Enter car model" required>
                </div>
                <div class="form-group">
                    <label for="carYear">Car Year</label>
                    <input type="number" class="form-control" id="carYear" placeholder="Enter car year" required>
                </div>
                <div class="form-group">
                    <label for="carPlate">Car Plate Number</label>
                    <input type="text" class="form-control" id="carPlate" placeholder="Enter car plate number" required>
                </div>

                <button type="submit" class="btn btn-secondary btn-register"> <b>Removed Car</b></button>
            </form>
        </div>
    </div>
</body>