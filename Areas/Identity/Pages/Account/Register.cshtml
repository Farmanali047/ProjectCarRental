@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>

    .signup-container {
        border-radius: 10px;
        background-color: #ffffff;
        padding: 20px;
        margin-top: 40px;
    }

    body {
        background-color: whitesmoke;
    }
</style>

<section class="container col-lg-6 col-md-10 col-sm-12 signup-container  ">
    <h1 class="text-center">Sign-Up</h1>
    <p class="text-center">Please fill out this form with the required information</p>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
        <div class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="col-md-6">
                <label asp-for="Input.First_Name">First Name</label>
                <input asp-for="Input.First_Name" class="form-control" autocomplete="Name" aria-required="true" placeholder="Enter the First Name" />
                <span asp-validation-for="Input.First_Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Last_Name">Last Name</label>
                <input asp-for="Input.Last_Name" class="form-control" autocomplete="Name" aria-required="true" placeholder="Enter the Last Name" />
                <span asp-validation-for="Input.Last_Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter the Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" enter the password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-md-6 mx-auto">
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" Enter the Confirm password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            </div>

        <div class="d-flex justify-content-center mt-3">
            <button id="registerSubmit" type="submit" class="btn text-light" style="background-color:#2C7865">Register</button>
        </div>

        </form>
   
    </div>
 </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
